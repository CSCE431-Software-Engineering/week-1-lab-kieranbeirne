<p style="color: green"><%= notice %></p>

<%= render @book %>

<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %>

  <%= button_to "Destroy this book", @book, method: :delete, id: "delete_book_button" %>

  <script>
    document.getElementById('delete_book_button').addEventListener('click', function(event) {
      if (!confirm('Are you sure you want to delete this book?')) {
        event.preventDefault();
      }
    });
  </script>

</div>
